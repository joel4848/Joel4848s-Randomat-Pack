local EVENT = {}
EVENT.Title = "Budget Jetpacks For All"
EVENT.Description = "Infinite stronger multijumps!"
EVENT.id = "budgetjetpacks"

EVENT.Categories = {"moderateimpact"}

local newAmountConVar = CreateConVar("budgetjetpacks_jump_amount", 9, FCVAR_ARCHIVE, "'Jetpack' extra jump amount (for testing)")
local newPowerConVar = CreateConVar("budgetjetpacks_jump_strength", 2, FCVAR_ARCHIVE, "'Jetpack' jump power multiplier")

-- Default extra jump amount & power which will need to be reset once the event ends
local orginalJumps = 1
local orginalPower = 1

function EVENT:Begin()

-- Record previous multijump amount and set new
    if ConVarExists("multijump_default_jumps") then
        orginalJumps = GetConVar("multijump_default_jumps"):GetInt()
        GetConVar("multijump_default_jumps"):SetInt(newAmountConVar)
    end

-- Record previous multijump power and set new
    if ConVarExists("multijump_default_power") then
        orginalPower = GetConVar("multijump_default_power"):GetInt()
        GetConVar("multijump_default_pwoer"):SetInt(newPowerConVar)
    end

end

function EVENT:End()
-- Record previous multijump amount and set new
    if ConVarExists("multijump_default_jumps") then
        GetConVar("multijump_default_jumps"):SetInt(orginalJumps)
    end

-- Record previous multijump power and set new
    if ConVarExists("multijump_default_power") then
        GetConVar("multijump_default_pwoer"):SetInt(orginalPower)
    end
end

function EVENT:Condition()
    return ConVarExists("multijump_default_jumps")
end

Randomat:register(EVENT)